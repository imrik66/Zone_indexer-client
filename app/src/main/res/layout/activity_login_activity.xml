<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rcdsm.thenotes.Authentication">

    <TextView
        android:text="Connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_activity_title"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/login_activity_login"
        android:hint="Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_activity_title"
        android:text="jordy@imerir.com"/>
    <EditText
        android:id="@+id/login_activity_password"
        android:hint="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_activity_login"
        android:text="jordy"
        android:password="true" />
    <Button
        android:text="Connexion"
        android:id="@+id/login_activity_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_activity_password"/>

</RelativeLayout>
